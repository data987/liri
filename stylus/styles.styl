@import 'nib'

*, .columns
	margin 0
	padding 0

/*** SMACSS ***/
.text-center
	text-align center
	
.text-right
	text-align right
	
.padding-top-1
	padding-top 1em
	
.absolute
	position absolute

.relative
	position relative

/*** Normal CSS ***/
body
	font-family Roboto
	font-size 14px
	
h2
	font-weight 400
	padding-bottom 0.2em

h3
	font-weight 200

p
	font-weight 200

/*** About ***/
.about
	padding 5em
	p
		font-size 1.5em

.box1
	overflow hidden
	height 43rem
	padding 2em

.box-white
	padding 3em 0 0 0

/*** Clients ***/
.clients
	p
		padding 5em
		
/*** Email ***/
.emailTo
	width 100%

/**.input-field
	padding 2em**/

	
/*** Features ***/
.features
	padding 5em
	p
		font-size 1.5em
.f_left
	text-align right

.f_right
	text-align left

.img_s
	height 90vh
	overflow hidden
	img
		min-width 100%

/*** Info of features ***/
.info_f
	padding 1.4em

.logo
	margin-left 1em
	
.menu
