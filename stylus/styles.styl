/*
	=========================================
	Label's colors
	=========================================
*/	
/* label focus color */
.input-field input[type=text]:focus + label {
  color #42a5f5
}
.input-field input[type=email]:focus + label {
  color #42a5f5
}
.input-field input[type=tel]:focus + label {
  color #42a5f5
}
.input-field input[type=password]:focus + label {
  color #42a5f5
}
.input-field input[type=date]:focus + label {
  color #42a5f5
}
/* label underline focus color */
.input-field input[type=text]:focus, .input-field input[type=email]:focus, .input-field input[type=tel]:focus, .input-field input[type=password]:focus, .input-field input[type=date]:focus {
  border-bottom 1px solid #42a5f5
  box-shadow 0 1px 0 0 #42a5f5
}

/*
	=========================================
	Picker Birthdate's colors
	=========================================
*/	
.picker__date-display {
  background-color #ef5350
}
  
.picker__weekday-display {
  background-color #e53935
}

.picker__day.picker__day--today {
  color #e53935
}
  
.picker__day--selected, .picker__day--selected:hover, .picker--focused .picker__day--selected {
  background-color #e53935
}

.picker__close, .picker__today {
  color #e53935
}

.picker__nav--prev:hover, .picker__nav--next:hover {
  background #ffcdd2
}

